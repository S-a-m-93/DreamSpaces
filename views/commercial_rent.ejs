  <form class="forms" action="./commercial_rent.ejs" method="post">
    <div id="PropertyDetailsform" class="form">
        <h1 style="margin-bottom: 30px; font-size: 30px;"><i class="fas fa-home"></i> Property Details</h1>
        <div class="input-group1" style="margin-bottom: 60px;">
            <label for="property-type" style="font-size: 20px; margin-left: 10px;">Property Type</label>
            <select id="property-type" name="property_type" style="height: 35px; width: 150px; margin-right: 55px;">
                <option value="">Property Type</option>
                <option value="office">Office Space</option>
                <option value="co-working">Co-working</option>
                <option value="showroom">Showroom</option>
                <option value="godown">Godown/Warehouse</option>
                <option value="shed">Industrial Shed</option>
                <option value="indus-building">Industrial Building</option>
                <option value="other">Other Business</option>
                <option value="cafe">Restaurant/Cafe</option>
            </select>
            <label for="building-type" style="font-size: 20px; margin-left: 10px;">Building Type</label>
            <select id="building-type" name="building_type" style="height: 35px; width: 150px; margin-right: 55px;">
                <option value="">Select Building Type</option>
            </select>
        </div>

        <div class="input-group2" style="margin-bottom: 60px; margin-left: 10px;">
            <label for="age" style="font-size:20px;">Age of Property:</label>
            <input type="number" id="age" name="age" min="1" placeholder="Age of Property" style="height: 25px; " required>
            
            <label for="floors" style="font-size:20px;">Floor:</label>
            <input type="number" id="floors" name="floors" min="0" placeholder="Floor" style="height: 25px; " required>
            
            <label for="totalfloor" style="font-size:20px;">Total Floor:</label>
            <input type="number" id="totalfloor" name="totalfloor" min="0" placeholder="Total Floor" style="height: 25px; " required>
        </div>

        <div class="input-group3" style="margin-bottom: 60px;margin-left: 10px;">
            <label for="builtuparea" style="font-size:20px;">Super Builtup Area (sq feet):</label>
            <input type="number" id="builtuparea" name="builtuparea" min="0" placeholder="Builtup Area" style="height: 25px; " required>

            <label for="carpetarea" style="font-size:20px;">Carpet Area (sq feet):</label>
            <input type="number" id="carpetarea" name="carpetarea" min="0" placeholder="Carpet Area" style="height: 25px; " required>
        </div>

        <div class="input-group4">
            <label for="furnish" style="font-size: 20px; margin-left: 10px;">Furnishing</label>
            <select id="furnish" name="furnish" style="height: 35px; width: 150px; margin-right: 55px;">
                <option value="full">Fully Furnished</option>
                <option value="semi">Semi Furnished</option>
                <option value="un">Unfurnished</option>
            </select>
        </div>
        <br><br>
        <button id="save-property-details-btn" onclick="saveAndContinuePropertyDetails()">Save Property Details</button>
    </div>
    <div id="RentalDetailsform" class="form">
         
        <h1 style="margin-bottom: 30px; font-size: 30px;"><i class="fas fa-dollar-sign"></i> Rent Details </h1> 
    
        <div class="input-group5" style=" margin-bottom: 30px;">
            <label for="Expected-rent" style="font-size:20px;">Expected Rent(per month) :</label>
            <input type="number" id="Expected-rent" name="Expected_rent"  min="0" placeholder="Enter Amount" size="10" style="width:170px;margin-right: 55px; height: 35px; " required>
        </div >
         
        <div class="input-group6" style="margin-bottom: 30px;">
            <input type="checkbox" id="Rent-Negotiable" name="Rent_Negotiable" value="Rent Negotiable" >
            <label for="Rent Negotiable" style="font-size:20px;">Rent Negotiable</label><br>
        </div>

        <div class="input-group7">
            <label for="Expected-deposit" style="font-size:20px;">Expected Deposit :</label>
            <input type="number" id="Expected-deposit" name="Expected_deposit" min="0" placeholder="Enter Amount" size="10" style="width:170px;margin-right: 55px; height: 35px; " required>
               <br><br><br><br>
            <label for="lease" style="font-size:20px;">Lease Duration(Years) :</label>
            <input type="number" id="lease" name="lease" min="1" placeholder="Enter Amount" size="10" style="width:170px;margin-right: 55px; height: 35px; " required>
        </div>
               <br><br>
        <div class="input-group8" style=" margin-bottom: 30px;">
            <br>
            <label for="Available From " style="font-size: 20px;">Available From :</label>
            <input type="date" id="Available-From " name="Available_From" style="height:35px; margin-right: 65px;" required>

        </div>
    
        <div class="input-gruopx">

            <label for=" Have you paid Property Tax?  " style="font-size: 20px;">Have you paid Property Tax? </label>
            <select id="Propertytax" name="Propertytax" style="height: 35px; margin-right: 55px;">
                <option value="Yes">Yes</option>    
                <option value="No">No</option>
                <option value="Dont Know">Dont Know</option>
            </select>
            <br><br><br><br>
            <label for=" Do You have Occupancy Certificate?  " style="font-size: 20px; margin-left: 10px;">Do You have Occupancy Certificate? </label>
            <select id="Occupancy" name="Occupancy" style="height: 35px; margin-right: 55px;">
                <option value="Yes">Yes</option>    
                <option value="No">No</option>
                <option value="Dont Know">Dont Know</option>
            </select>
          
            <br><br>
        </div>
        
        <button id="save-rental-details-btn" onclick="saveAndContinueRentalDetails()">Save Sale Details</button>

    </div>
  
  <div id="LocalityDetailsform">
    <h2 style="font-size: 30px; margin-bottom: 30px;"><i class="fas fa-map-marker-alt"></i> Locality </h2>
    <div class="input-group11" style=" margin-left: 10px; margin-bottom: 30px;">
        <label for="City" style="font-size:20px; ">City :</label>
        <select id="City" name="city" style="height:35px;margin-right: 55px; width: 160px;" required>
            <option value="Chennai">Chennai</option>
            <option value="Mumbai">Mumbai</option>
            <option value="Banglore">Banglore</option>
            <option value="Hyderabad">Hyderabad</option>
            <option value="Kolkata">Kolkata</option>
        </select>

        <label for="Locality" style="font-size:20px;">Locality :</label>
        <input type="text" id="Locality" name="Locality" placeholder="Enter Locality" size="10" style="width:170px; height: 35px; width: 160px;" required>

        <br>
        <br>
        <br>
        <br>
        <label for="LocalLandmark / Streetity" style="font-size:20px;">Landmark / Street :</label>
        <input type="text" id="Landmark / Street" name="landmark_street" placeholder="Enter Landmark / Street" size="10" style="width:170px; height: 35px; width: 200px;" required>
        <br>
        <br>
        <br>
        <br>
        <p style="font-size:20px;">Description-box</p>
        <br>
        <textarea id="description-input" name="locality_description" placeholder="Write a few lines about your property which is special and makes your property stand out. Please do not mention your contact details in any format." rows="4" cols="50"></textarea>
        
    </div> 
  <button id="save-locality-details-btn" onclick="saveAndContinueLocalityDetails()">Save Locality Details</button>
 </div>
 <div id="centeredWrapper">
   
   <div id="Gallery">
      <h2 style="font-size:30px"><i class="fas fa-camera"></i> Gallery</h2>
       <div class="file-input">
           <input type="file" id="image" name="image" accept="image/*" multiple max="10">
           <label for="image">Choose image(s) (Maximum 10)</label>
       </div>
       <br><br><br>
       <button type="button" id="uploadBtn">Upload</button>
       <div id="uploadStatus"></div>
       <div id="imageContainer"></div>
       <br><br>
       <button id="save-gallery-btn" onclick="saveAndContinueGalleryDetails()">Save and Continue</button>
   </div>
   
 </div>

    <div id="Amenities" style="margin-left: 10px;">
        <h2 style="font-size: 30px;"><i class="fas fa-utensils"></i> Amenities </h2>
        <div class="input-group11" style="margin-top: 40px;">

            <label for="water-storage" style="font-size:20px;"><i class="fas fa-tint"></i>Water Storage Facility:</label>
            <select id="water-storage" name="water_supply" style="height: 35px; width: 100px; margin-right: 55px;">
                <option value="">Select</option>
                <option value="yes">Yes</option>
                <option value="no">No</option>
            </select>

            <label for="powerbackup" style="font-size:20px;"><i class="fas fa-power-off"></i>Power Backup:</label>
            <select id="powerbackup" name="powerbackup" style="height: 35px; width: 150px; margin-right: 55px;">
                <option value="">Select</option>
                <option value="full">Full</option>
                <option value="partial">Partial</option>
                <option value="need">Need to Arrange</option>
                
            </select>
        </div>
        <div class="input-group12" style="margin-top: 50px; margin-bottom: 50px;">            

            <label for="lift" style="font-size:20px;"><i class="fas fa-arrow-up"></i>Lift</label>
            <select id="lift" name="lift" style="height: 35px; margin-right: 55px;">
                <option value="">Select</option>
                <option value="none">None</option>
                <option value="personal">Personal</option>
                <option value="common">Common</option>
                    
            </select>

            <label for="wash" style="font-size:20px;"><i class="fas fa-restroom"></i>Washrooms</label>
            <select id="wash" name="wash" style="height: 35px; margin-right: 55px;">
                <option value="">Select</option>
                <option value="private">Private</option>
                <option value="shared">Shared</option>
                <option value="none">No Washroom</option>
                    
            </select>

        </div>

        <div class="input-group13" >
            <label for="security" style="font-size: 20px;"><i class="fas fa-shield-alt"></i>Gated Security</label>
            <select id="security" name="security" style="height: 35px; width: 80px; margin-right: 55px;">
                <option value="">Select</option>
                <option value="yes">Yes</option>
                <option value="no">No</option>
            </select>

            <label for="parking" style="font-size: 20px; margin-left: 10px;"><i class="fas fa-parking"></i>Parking</label>
            <select id="parking" name="parking" style="height: 35px; width: 80px; margin-right: 55px;">
                <option value="">Select</option>
                <option value="yes">Yes</option>
                <option value="no">No</option>
            </select>
        <br><br><br><br><br>
        <div class="input-group14" style="margin-bottom: 30px;">
            <label for="Availability" style="font-size:20px;">Availability to show property :</label>
            <select id="Availability" name="Availability" style="height: 35px; margin-right: 55px;">
                <option value="Availability">Availability</option>
                <option value="EveryDay">EveryDay</option>
                <option value="Weekdays">Weekdays</option>
                <option value="WeekEnds">WeekEnds</option>  
            </select>
        </div>
        <div class="scheduleTime">
            <label for="scheduleTime" style="font-size: 20px;">ScheduleTime :</label><br><br>
            <label for="startTime">Start Time:</label>
            <input type="time" id="startTime" name="startTime"><br><br>
            <label for="endTime">End Time:</label>
            <input type="time" id="endTime" name="endTime">
        </div>
        <br><br><br><br>
        <p style="font-size:20px;">Add Directions tip:</p>
        <textarea id="description-input" name="Directions" rows="4" cols="50"></textarea>
        <br><br><br>

        <button id="post-btn" onclick="postProperty()">Post</button>
       
    </div>

   
         

   <p id="post-message" style="display: none;">Property Posted</p>

  </div>


</form>
