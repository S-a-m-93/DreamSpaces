<!DOCTYPE html>
<html lang="en">
  <head>
    <meta charset="UTF-8" />
    <meta http-equiv="X-UA-Compatible" content="IE=edge" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <!-- StyleSheet -->
    <link rel="stylesheet" href="/css/login_signup.css" />
    <title>DreamSpaces - Sign Up & Login Form</title>
  </head>
  <body>
    <% if(profile) { %>
      <section>
        <div class="container active">
          <div class="user signup">
            <div class="form-box">
              <form id="registrationForm" action="/register" method="post">
                <div class="form-control">
                  <h2>Welcome To DreamSpaces!</h2>
                  <p>"Explore and enjoy."</p>
                  <input
                    type="text"
                    id="name"
                    name="name"
                    placeholder="<%= profile.displayName %>"
                    value="<%= profile.displayName %>"
                    required
                    readonly
                  />
                  <input
                    type="email"
                    id="email"
                    name="email"
                    placeholder="<%= profile.emails[0].value %>"
                    value="<%= profile.emails[0].value %>"
                    required
                    readonly
                  />
                  <span id="email-error"></span>
                  <input
                    type="tel"
                    id="phone"
                    name="phone"
                    placeholder="Enter Mobile Number"
                    required
                  />
                  <span id="phone-error"></span>
    
                  <div>
                    <input
                      type="password"
                      id="password"
                      name="password"
                      placeholder="Password"
                      required
                    />
                    <div class="icon form-icon">
                      <img src="/images/eye.svg" alt="" />
                    </div>
                  </div>
                  <div>
                    <input
                      type="password"
                      id="confirmpassword"
                      name="confirmpassword"
                      placeholder="Confirm Password"
                      required
                    />
                    <div class="icon form-icon">
                      <img src="/images/eye.svg" alt="" />
                    </div>
                  </div>
                  <input type="Submit" value="Complete Registration" />
                </div>
              </form>
            </div>
            <div class="img-box">
              <img src="/images/signupp.jpg" alt="" />
            </div>
          </div>
        </div>
      </section>
      <% } else { %>
          <section>
            <div class="container">
              <div class="user login">
                <div class="img-box">
                  <img src="/images/loginn.jpg" alt="" />
                </div>
                <div class="form-box">
                  <div class="top">
                    <p>
                      Not a member?
                      <span data-id="#ff0066">Register now</span>
                    </p>
                  </div>
                  <form id="loginForm" action="/login" method="post">
                    <div class="form-control">
                      <h2>DreamSpaces</h2>
                      <p>"Where dreams meet homes."</p>
                      <input
                        type="email"
                        id="l_email"
                        name="l_email"
                        placeholder="Enter Email ID"
                        required
                      />
                      <span id="email-error"></span>
                      <div>
                        <input
                          type="password"
                          id="l_password"
                          name="l_password"
                          placeholder="Password"
                          required
                        />
                        <div class="icon form-icon"></div>
                      </div>
                      <span>Recovery Password</span>
                      <input type="Submit" value="Login" />
                    </div>
                  </form>
      
                  <a href="/auth/google">
                    <button>Sign Up with Google</button>
                  </a>
                
                </div>
              </div>
      
              <!-- Register -->
              <div class="user signup">
                <div class="form-box">
                  <div class="top">
                    <p>
                      Already a member?
                      <span data-id="#1a1aff">Login now</span>
                    </p>
                  </div>
                  <form id="registrationForm" action="/register" method="post">
                    <div class="form-control">
                      <h2>Welcome To DreamSpaces!</h2>
                      <p>"Explore and enjoy."</p>
                      <input
                        type="text"
                        id="name"
                        name="name"
                        placeholder="Enter Name"
                        required
                      />
                      <input
                        type="email"
                        id="email"
                        name="email"
                        placeholder="Enter Email"
                        required
                      />
                      <span id="email-error"></span>
                      <input
                        type="tel"
                        id="phone"
                        name="phone"
                        placeholder="Enter Mobile Number"
                        required
                      />
                      <span id="phone-error"></span>
      
                      <div>
                        <input
                          type="password"
                          id="password"
                          name="password"
                          placeholder="Password"
                          required
                        />
                        <div class="icon form-icon">
                          <img src="/images/eye.svg" alt="" />
                        </div>
                      </div>
                      <div>
                        <input
                          type="password"
                          id="confirmpassword"
                          name="confirmpassword"
                          placeholder="Confirm Password"
                          required
                        />
                        <div class="icon form-icon">
                          <img src="/images/eye.svg" alt="" />
                        </div>
                      </div>
                      <input type="Submit" value="Register" />
                    </div>
                  </form>
                </div>
                <div class="img-box">
                  <img src="/images/signupp.jpg" alt="" />
                </div>
              </div>
            </div>
          </section>
      <% } %>
    <script src="/js/login_signup.js"></script>
  </body>
</html>
